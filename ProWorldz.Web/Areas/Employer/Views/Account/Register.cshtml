@model ProWorldz.Web.Areas.Employer.Models.RegisterModel



<div class="main-page-title">
    <br />
    <div class="col-md-12" id="divMessage" onclick="hideMessage(this);">
            @if (Model != null && !string.IsNullOrEmpty(Model.SuccessMessage))
        {
                <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
        }
            @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
        {
                <div class="alert alert-success" role="alert">@Model.ErrorMessage</div>
        }
        </div>
    <!-- start main page title -->
    <div class="container">
        <h4 class="register-title">Register</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="form-regist-container col-md-12">
                    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                   
                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.Email, new { @class = "form-control input-form", @placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.Employer.Email)

                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.CompanyName, new { @class = "form-control input-form", @placeholder = "Company Name" })
                            @Html.ValidationMessageFor(model => model.Employer.CompanyName)
                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.Website, new { @class = "form-control input-form", @placeholder = "Website" })
                            @Html.ValidationMessageFor(model => model.Employer.Website)

                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.CompanyContactNumber, new { @class = "form-control input-form", @placeholder = "Company Contact No." })
                            @Html.ValidationMessageFor(model => model.Employer.CompanyContactNumber)

                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.DropDownListFor(x => x.Employer.CountryId, new SelectList(Model.CountryList, "CountryId", "Name", Model.Employer.CountryId), "Country", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Employer.CountryId)
                            @*   <select class="form-control">
                                <option>Country</option>
                                <option>India</option>

                            </select>*@
                        </div>



                        <div class="form-group col-md-3">
                            @Html.DropDownListFor(x => x.Employer.IndustryId, new SelectList(Model.IndustryList, "Id", "Name", Model.Employer.CountryId), "Industry", new { @class = "form-control" })
                            @* <select class="form-control">
                                <option>Industry</option>
                                <option>Art</option>

                            </select>*@
                        </div>







                        <div class="form-group col-md-3">
                            <select class="form-control">
                                <option>Location</option>
                                <option>Art</option>

                            </select>
                        </div>



                        <div class="form-group col-md-3">
                            @Html.TextAreaFor(model => model.Employer.Address, new { @class = "form-control textarea", @placeholder = "Address" })
                            @* <textarea class="form-control textarea" placeholder="Address"></textarea>*@
                        </div>


                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.Username, new { @class = "form-control input-form", @placeholder = "Username" })

                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.Designation, new { @class = "form-control input-form", @placeholder = "Designation" })

                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.UserPhoneNumber, new { @class = "form-control input-form", @placeholder = "Phone Number" })

                            <div class="register-aksen"></div>
                        </div>

                        <div class="form-group col-md-3">
                            @Html.TextBoxFor(model => model.Employer.CompanyExtentionNumber, new { @class = "form-control input-form", @placeholder = "Company Ext. Number" })

                            <div class="register-aksen"></div>
                        </div>

                       

                        <div class="form-group col-md-3">
                            <label for="logo">Logo  </label>
                            <div class="upload">
                                <input type="file" id="file" name="file">
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            <input type="submit" class="btn btn-default btn-green" value="REGISTER" />
                          
                        </div>
                   
                    }
                </div>



            </div>


        </div>
    </div>
</div>
<!-- end main page title -->

